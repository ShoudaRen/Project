<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cy.myProject.Mapper.MybookingMapper">
   <resultMap id="MybookingMap" type="com.cy.myProject.entity.MyBooking">
       <id column="reference" property="reference"></id>

       <result column="created_user" property="createdUser"></result>
       <result column="created_time" property="createdTime"></result>
       <result column="modified_user" property="modifiedUser"></result>
       <result column="modified_time" property="modifiedTime"></result>
   </resultMap>


    <insert id="insertBookingDetail" useGeneratedKeys="true" keyProperty="reference">

        INSERT INTO t_myallbook (
            reference,
            uid,
            flightId,
            passengerId,
            mySeat,
            classPrice,
            meals,
            pickup,
            transitHotel,
            transitLounge,
            specialServices,
            preSeat,
            totalPrice,
            payStatus,
            extraLuggage,
            isDelete,
            created_user,
            created_time,
            modified_user,
            modified_time

        )VALUES(
                  #{reference},
                  #{uid},
                  #{flightId},
                  #{passengerId},
                  #{mySeat},
                  #{classPrice},
                  #{meals},
                  #{pickup},
                  #{transitHotel},
                  #{transitLounge},
                  #{specialServices},
                  #{preSeat},
                  #{totalPrice},
                  #{payStatus},
                  #{extraLuggage},
                   #{isDelete},
                   #{createdUser},
                   #{createdTime},
                   #{modifiedUser},
                   #{modifiedTime}
                   )
    </insert>

    <select id="findServiceByRef" resultMap="MybookingMap">
        select * from t_myallbook where  reference=#{reference}
    </select>

</mapper>